<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/category_your_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/category_your_menu"
        android:fontFamily="@font/poppins_bold"
        android:paddingVertical="20dp"
        android:textColor="@color/primary"
        android:textSize="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_your_menu"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        android:backgroundTint="@color/secondary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/image_your_menu"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/default_food"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/title_your_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title_item_your_menu"
                android:fontFamily="@font/poppins_bold"
                android:paddingTop="15dp"
                android:paddingHorizontal="20dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/desc_your_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_item_your_menu"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:paddingTop="5dp"
                android:paddingHorizontal="20dp"
                android:textSize="12dp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>